<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/leftGL"
      app:layout_constraintGuide_begin="16dp"
      android:orientation="vertical"/>

  <androidx.constraintlayout.widget.Guideline
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/rightGL"
      app:layout_constraintGuide_end="16dp"
      android:orientation="vertical"/>

  <androidx.constraintlayout.widget.Guideline
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/topGL"
      app:layout_constraintGuide_begin="16dp"
      android:orientation="horizontal"/>

  <androidx.constraintlayout.widget.Guideline
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/bottomGL"
      app:layout_constraintGuide_end="6dp"
      android:orientation="horizontal"/>

  <ImageView
      android:id="@+id/moviePosterIV"
      android:layout_width="wrap_content"
      android:src="@drawable/ic_image_green"
      app:layout_constraintTop_toTopOf="@+id/topGL"
      app:layout_constraintLeft_toLeftOf="@+id/leftGL"
      android:layout_height="wrap_content"/>

  <TextView android:layout_width="wrap_content"
      android:id="@+id/movieTitleIV"
      app:layout_constraintTop_toTopOf="@+id/topGL"
      app:layout_constraintLeft_toRightOf="@+id/moviePosterIV"
      app:layout_constraintRight_toRightOf="@+id/rightGL"
      android:layout_height="wrap_content"/>

  <TextView android:layout_width="wrap_content"
      android:id="@+id/movieYearIV"
      app:layout_constraintTop_toBottomOf="@+id/movieTitleIV"
      app:layout_constraintLeft_toRightOf="@+id/moviePosterIV"
      app:layout_constraintRight_toRightOf="@+id/rightGL"
      android:layout_height="wrap_content"/>

  <TextView android:layout_width="wrap_content"
      android:id="@+id/movieDirectorIV"
      app:layout_constraintTop_toBottomOf="@+id/movieYearIV"
      app:layout_constraintLeft_toRightOf="@+id/moviePosterIV"
      app:layout_constraintRight_toRightOf="@+id/rightGL"
      android:layout_height="wrap_content"/>

  <TextView android:layout_width="wrap_content"
      android:id="@+id/movieGenreIV"
      app:layout_constraintTop_toBottomOf="@+id/movieDirectorIV"
      app:layout_constraintLeft_toRightOf="@+id/moviePosterIV"
      app:layout_constraintRight_toRightOf="@+id/rightGL"
      android:layout_height="wrap_content"/>

  <TextView android:layout_width="wrap_content"
      android:id="@+id/movieSummaryIV"
      app:layout_constraintTop_toBottomOf="@+id/movieGenreIV"
      app:layout_constraintLeft_toRightOf="@+id/moviePosterIV"
      app:layout_constraintRight_toRightOf="@+id/rightGL"
      app:layout_constraintBottom_toTopOf="@+id/bottomGL"
      android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>