<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

  <data>
    <variable name="viewModel"
        type="com.example.project.Filters"/>
  </data>

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatCheckBox android:layout_width="wrap_content"
        android:id="@+id/checkBoxRV"
        android:checked="@{viewModel.state.get()}"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView android:layout_width="match_parent"
        android:id="@+id/textViewRV"
        android:layout_height="wrap_content"/>

  </LinearLayout>


</layout>